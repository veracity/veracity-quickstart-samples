@using System.Security.Claims
@{
    ViewBag.Title = "Claims";
}

<h2>@ViewBag.Title</h2>
<h4>Claims Present in the Claims Identity:</h4>
<table>
    <tr>
        <th>Claim Type</th>
        <th>Claim Value</th>
    </tr>
    @foreach (var claim in ClaimsPrincipal.Current.Claims)
    {
        <tr>
            <td>@claim.Type</td>
            <td>@claim.Value</td>
        </tr>
    }
</table>